<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .admin-title {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .admin-title h2 {
      margin: 0;
    }
    .admin-posts {
      list-style-type: none;
      padding: 0;
    }
    .admin-posts li {
      margin-bottom: 10px;
    }
    .admin-post-controls {
      display: flex;
      gap: 10px;
    }
    .btn {
      padding: 5px 10px;
      font-size: 14px;
      text-decoration: none;
    }
    .btn-edit {
      background-color: #007bff;
      color: #fff;
    }
    .btn-delete {
      background-color: #dc3545;
      color: #fff;
    }
    .carousel-inputs {
      margin-bottom: 20px;
    }
    .carousel-inputs input {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="admin-title">
      <h2>Posts</h2>
      <a href="/add-post" class="btn btn-primary">+ Add New</a>
    </div>

    <!-- Existing content for posts -->
    <ul class="admin-posts">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>"><%= post.title %> &nearr;</a>
          <div class="admin-post-controls">
            <a href="/edit-post/<%= post._id %>" class="btn btn-edit">Edit</a>
            <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>

    <!-- Form for changing carousel images -->
    <div class="admin-title">
      <h2>Update Carousel Images</h2>
    </div>
    
    <form action="/update-carousel" method="POST">
      <div class="mb-3">
        <label for="slide1" class="form-label">Slide 1 URL:</label>
        <input type="url" class="form-control" id="slide1" name="slide1" required>
      </div>
      <div class="mb-3">
        <label for="slide2" class="form-label">Slide 2 URL:</label>
        <input type="url" class="form-control" id="slide2" name="slide2" required>
      </div>
      <div class="mb-3">
        <label for="slide3" class="form-label">Slide 3 URL:</label>
        <input type="url" class="form-control" id="slide3" name="slide3" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
  </div>
</body>
</html>
